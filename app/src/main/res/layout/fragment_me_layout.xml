<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#333D56"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#2D374C"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">
        <com.example.asus_pc.trainer.until.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/user_portrait"
            android:id="@+id/user_portrait"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/user_portrait"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_ID"
                android:textSize="25sp"
                android:textColor="#D4D29F"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/trainer_ID"
                android:textSize="14sp"
                android:textColor="#D4D29F"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_compile"
            android:background="@drawable/compile"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Msg"
        android:background="#2D374C"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:text="       个人基本信息"
        android:textSize="16sp"
        android:textColor="#D4D29F"
        android:drawableLeft="@drawable/user_msg2"
        android:drawableRight="@drawable/enter_right"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BMI"
        android:background="#2D374C"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:text="       体重指数"
        android:textSize="16sp"
        android:textColor="#D4D29F"
        android:drawableLeft="@drawable/icon_bmi2"
        android:drawableRight="@drawable/enter_right"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D374C"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:text="       腰围身高比"
        android:id="@+id/whtr"
        android:textColor="#D4D29F"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_waist"
        android:drawableRight="@drawable/enter_right"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D374C"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:text="       体脂率"
        android:id="@+id/BFR"
        android:textColor="#D4D29F"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_bfr"
        android:drawableRight="@drawable/enter_right"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D374C"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:text="       基础代谢率"
        android:id="@+id/BMR"
        android:textColor="#D4D29F"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_bmr"
        android:drawableRight="@drawable/enter_right"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D374C"
        android:padding="15dp"
        android:gravity="left|center_vertical"
        android:text="       健康课程"
        android:id="@+id/train_log"
        android:textColor="#D4D29F"
        android:textSize="16sp"
        android:drawableLeft="@drawable/train_log"
        android:drawableRight="@drawable/enter_right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D374C"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:id="@+id/clear_cache"
            android:drawableLeft="@drawable/clean_cache"
            android:gravity="center"
            android:text="       清除缓存"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textColor="#D4D29F"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:text="1.0MB"
            android:id="@+id/cache"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D374C"
        android:id="@+id/logout"
        android:gravity="center"
        android:text="@string/logout"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#D4D29F"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>
