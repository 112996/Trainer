<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333D56"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/app_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAINERS"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@android:color/white"
            android:textSize="38sp"
            android:layout_marginTop="@dimen/trainer_marginTop"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT'S SIMPLE"
            android:typeface="monospace"
            android:textSize="15sp"
            android:layout_margin="@dimen/it_simple_margin"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUT NOT EASY"
            android:typeface="monospace"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="@dimen/login_btn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn_style"
            android:textColor="#FFFFFF"
            android:text="登   录"
            android:textSize="25sp"
            android:typeface="monospace"
            android:id="@+id/login_btn"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/login_btn_marginTop" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="@dimen/register_btn_width"
            android:layout_height="wrap_content"
            android:background="@drawable/register_btn_style"
            android:id="@+id/regist_btn"
            android:layout_centerHorizontal="true"
            android:text="注   册"
            android:textSize="25sp"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/regist_btn_marginTop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Start free tried."
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>




</LinearLayout>