<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333D56"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/app_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAINERS"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="@android:color/white"
            android:textSize="38sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT'S SIMPLE"
            android:typeface="monospace"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUT NOT EASY"
            android:typeface="monospace"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:background="@drawable/login_btn_style"
            android:textColor="#FFFFFF"
            android:text="登   录"
            android:textSize="25sp"
            android:typeface="monospace"
            android:id="@+id/login_btn"
            android:textAllCaps="false"
            android:layout_margin="15dp"/>
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/register_btn_style"
            android:id="@+id/regist_btn"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="注   册"
            android:textSize="25sp"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Start free tried."
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>


</LinearLayout>